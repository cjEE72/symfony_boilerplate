{% extends 'base.html.twig' %}

{% block body %}
<div class="max-w-2xl mx-auto mt-10 p-8 bg-white shadow-xl rounded-lg">
    <div class="mb-8">
        <div class="flex justify-between mb-2">
            <span class="text-xs font-semibold inline-block py-1 px-2 uppercase rounded-full text-indigo-600 bg-indigo-200">
                Progression
            </span>
            <span class="text-xs font-semibold inline-block py-1 px-2 uppercase rounded-full text-indigo-600 bg-indigo-200">
                {{ (step / 4 * 100)|round }}%
            </span>
        </div>
        <div class="overflow-hidden h-2 mb-4 text-xs flex rounded bg-indigo-200">
            <div style="width: {{ (step / 4 * 100)|round }}%" class="shadow-none flex flex-col text-center whitespace-nowrap text-white justify-center bg-indigo-500 transition-all duration-500"></div>
        </div>
    </div>

    <h1 class="text-2xl font-bold mb-6">Étape {{ step }} : 
        {% if step == 1 %}Type de produit{% elseif step == 2 %}Détails{% elseif step == 3 %}Spécificités{% else %}Confirmation{% endif %}
    </h1>

    {% if step == 4 or (step == 3) %}
    <div class="bg-blue-50 p-4 rounded mb-6 border border-blue-200">
        <h3 class="font-bold text-blue-800 mb-2">Récapitulatif de votre saisie :</h3>
        <ul class="text-sm space-y-1">
            <li><strong>Nom :</strong> {{ product.name }}</li>
            <li><strong>Prix :</strong> {{ product.price }} €</li>
            <li><strong>Type :</strong> N/A</li>
            <li><strong>Poids :</strong> N/A</li>
            <li><strong>URL :</strong> N/A</li>
        </ul>
    </div>
{% endif %}

    {{ form_start(form) }}
        <div class="space-y-4">
            {{ form_widget(form) }}
        </div>

        <div class="flex justify-between mt-8 border-t pt-4">
            {% if step > 1 %}
                <a href="{{ path('app_product_new', {'step': step - 1}) }}" class="px-4 py-2 bg-gray-300 text-gray-700 rounded hover:bg-gray-400">
                    Précédent
                </a>
            {% else %}
                <div></div>
            {% endif %}

            <button type="submit" class="px-6 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700 font-bold">
                {{ step == 4 ? 'Terminer' : 'Suivant' }}
            </button>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}