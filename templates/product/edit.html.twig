{# templates/product/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Modifier le produit{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto py-12 px-4">
    {# Fil d'ariane / Retour #}
    <div class="mb-8">
        <a href="{{ path('app_product_index') }}" class="text-sm font-medium text-indigo-600 hover:text-indigo-800 transition flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
            Retour au catalogue
        </a>
    </div>

    <div class="bg-white shadow-2xl rounded-3xl overflow-hidden border border-gray-100">
        {# Header de la carte #}
        <div class="bg-indigo-600 px-8 py-6">
            <h1 class="text-2xl font-bold text-white">Modifier le produit</h1>
            <p class="text-indigo-100 text-sm opacity-80">Mise à jour des informations de #{{ product.id }}</p>
        </div>

        <div class="p-8">
            {# Inclusion du formulaire stylisé #}
            {{ include('product/_form.html.twig', {'button_label': 'Enregistrer les modifications'}) }}

            {# (Suppression) #}
            <div class="mt-12 pt-8 border-t border-gray-100">
                <h3 class="text-sm font-semibold text-red-600 uppercase tracking-wider mb-4">Suppression du produit</h3>
                <div class="bg-red-50 rounded-2xl p-6 border border-red-100 flex items-center justify-between">
                    <div>
                        <p class="text-sm text-red-800 font-bold">Supprimer ce produit</p>
                        <p class="text-xs text-red-600">Cette action est irréversible</p>
                    </div>
                    <div class="w-48">
                        {{ include('product/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}