{# templates/product/show.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
<div class="max-w-3xl mx-auto py-10 px-4">
    <div class="mb-6 flex justify-between items-center">
        <a href="{{ path('app_product_index') }}" class="text-sm text-gray-500 hover:text-indigo-600 flex items-center">
             ← Retour à la liste
        </a>
        <span class="px-3 py-1 rounded-full text-xs font-bold uppercase tracking-widest bg-gray-100 text-gray-700">N/A</span>
    </div>

    <div class="bg-white shadow-lg rounded-2xl p-8 border border-gray-100">
        <div class="flex justify-between items-start mb-6">
            <div>
                <h1 class="text-4xl font-bold text-gray-900">{{ product.name }}</h1>
                <p class="text-lg text-gray-500 mt-2">{{ product.description }}</p>
            </div>
            <div class="text-3xl font-bold text-indigo-600">{{ product.price }} €</div>
        </div>

        <div class="space-y-6 border-t border-gray-100 pt-6">
            <h3 class="text-sm font-semibold text-gray-400 uppercase tracking-wider">Informations</h3>

            <div class="grid grid-cols-2 gap-y-6">
                <div>
                    <span class="block text-xs text-gray-400">Référence interne</span>
                    <span class="text-gray-900 font-medium">#{{ product.id }}</span>
                </div>
                <div>
                    <span class="block text-xs text-gray-400">Disponibilité</span>
                    <span class="text-gray-900 font-medium">À définir</span>
                </div>
            </div>
        </div>

        <div class="flex items-center gap-4 mt-10">
            <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="flex-1 text-center bg-amber-500 hover:bg-amber-600 text-white font-bold py-3 rounded-xl transition">
                Modifier le produit
            </a>
            <div class="w-1/3">
                {{ include('product/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}