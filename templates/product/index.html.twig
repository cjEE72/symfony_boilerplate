{% extends 'base.html.twig' %}

{% block title %}Catalogue Produits{% endblock %}

{% block body %}
<div class="max-w-6xl mx-auto py-8 px-4">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-extrabold text-gray-900">Catalogue Produits</h1>
        <div class="flex items-center gap-3">
            {% if is_granted('ADMIN_ACCESS') %}
                <a href="{{ path('app_product_new') }}" class="bg-indigo-600 hover:bg-indigo-700 text-white px-5 py-2.5 rounded-lg font-medium transition shadow-sm">+ Nouveau produit</a>
                <a href="{{ path('app_product_import_csv') }}" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium">Importer</a>
            {% endif %}
            <a href="{{ path('app_product_export_csv') }}" class="bg-emerald-600 hover:bg-emerald-700 text-white px-4 py-2 rounded-lg font-bold flex items-center gap-2 transition">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                Exporter en CSV
            </a>
        </div>
    </div>

    <div class="bg-white shadow-md rounded-xl overflow-hidden border border-gray-200">
        <table class="w-full text-left border-collapse">
            <thead class="bg-gray-50 border-b border-gray-200">
                <tr>
                    <th class="px-6 py-4 text-sm font-semibold text-gray-600 uppercase">Produit</th>
                    <th class="px-6 py-4 text-sm font-semibold text-gray-600 uppercase">Prix</th>
                    <th class="px-6 py-4 text-sm font-semibold text-gray-600 uppercase">Type</th>
                    <th class="px-6 py-4 text-sm font-semibold text-gray-600 uppercase text-right">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
            {% for product in products %}
                <tr class="hover:bg-gray-50 transition">
                    <td class="px-6 py-4">
                        <div class="font-medium text-gray-900">{{ product.name }}</div>
                        <div class="text-sm text-gray-500 truncate max-w-xs">{{ product.description }}</div>
                    </td>
                    <td class="px-6 py-4 font-mono text-gray-700">{{ product.price }} €</td>
                    <td class="px-6 py-4">
                        <span class="px-2.5 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-700">N/A</span>
                    </td>
                    <td class="px-6 py-4 text-right space-x-3">
                        <a href="{{ path('app_product_show', {'id': product.id}) }}" class="text-indigo-600 hover:text-indigo-900 font-medium">Voir</a>
                        {% if is_granted('ADMIN_ACCESS') %}
                            <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="text-amber-600 hover:text-amber-900 font-medium">Éditer</a>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="px-6 py-10 text-center text-gray-500 italic">Aucun produit trouvé dans le catalogue.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}