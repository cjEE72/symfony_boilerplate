{% extends 'base.html.twig' %}

{% block title %}Liste des clients{% endblock %}

{% block body %}
<div class="max-w-6xl mx-auto py-8 px-4">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-extrabold text-gray-900">Clients</h1>
        <a href="{{ path('app_client_new') }}" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg font-medium">+ Nouveau client</a>
    </div>

    <div class="bg-white shadow-md rounded-xl overflow-hidden border border-gray-200">
        <table class="w-full text-left border-collapse">
            <thead class="bg-gray-50 border-b border-gray-200">
                <tr>
                    <th class="px-6 py-3 text-sm font-semibold text-gray-600 uppercase">Id</th>
                    <th class="px-6 py-3 text-sm font-semibold text-gray-600 uppercase">Prénom</th>
                    <th class="px-6 py-3 text-sm font-semibold text-gray-600 uppercase">Nom</th>
                    <th class="px-6 py-3 text-sm font-semibold text-gray-600 uppercase">Email</th>
                    <th class="px-6 py-3 text-sm font-semibold text-gray-600 uppercase">Téléphone</th>
                    <th class="px-6 py-3 text-sm font-semibold text-gray-600 uppercase">Créé le</th>
                    <th class="px-6 py-3 text-sm font-semibold text-gray-600 uppercase text-right">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
            {% for client in clients %}
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4">{{ client.id }}</td>
                    <td class="px-6 py-4">{{ client.firstname }}</td>
                    <td class="px-6 py-4">{{ client.lastname }}</td>
                    <td class="px-6 py-4">{{ client.email }}</td>
                    <td class="px-6 py-4">{{ client.phoneNumber }}</td>
                    <td class="px-6 py-4">{{ client.createdAt ? client.createdAt|date('Y-m-d H:i') : '' }}</td>
                    <td class="px-6 py-4 text-right space-x-3">
                        <a href="{{ path('app_client_show', {'id': client.id}) }}" class="text-indigo-600 hover:text-indigo-900">Voir</a>
                        <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="text-amber-600 hover:text-amber-900">Éditer</a>

                        <form method="post" action="{{ path('app_client_delete', {'id': client.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce client ?');" class="inline-block">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
                            <button class="text-red-600 hover:text-white hover:bg-red-600 px-3 py-1 rounded">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="px-6 py-10 text-center text-gray-500">Aucun client trouvé.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
