{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto py-10 px-4">
    <div class="mb-6 flex justify-between items-center">
        <a href="{{ path('app_client_index') }}" class="text-sm text-gray-500 hover:text-indigo-600 flex items-center">
             ← Retour à la liste
        </a>
        <div class="text-sm text-gray-500">#{{ client.id }}</div>
    </div>

    <div class="bg-white shadow-lg rounded-2xl p-8 border border-gray-100">
        <div class="flex justify-between items-start mb-6">
            <div>
                <h1 class="text-4xl font-bold text-gray-900">{{ client.firstname }} {{ client.lastname }}</h1>
                <p class="text-lg text-gray-500 mt-2">{{ client.email }}</p>
            </div>
            <div class="text-sm text-gray-600">Créé le<br>{{ client.createdAt ? client.createdAt|date('Y-m-d H:i') : '' }}</div>
        </div>

        <div class="space-y-6 border-t border-gray-100 pt-6">
            <div>
                <h3 class="text-sm font-semibold text-gray-400 uppercase tracking-wider">Détails</h3>
                <div class="mt-2 text-gray-900">
                    <p>Téléphone : {{ client.phoneNumber }}</p>
                    <p>Adresse : {{ client.address }}</p>
                </div>
            </div>
        </div>

        <div class="flex items-center gap-4 mt-10">
            <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="flex-1 text-center bg-amber-500 hover:bg-amber-600 text-white font-bold py-3 rounded-xl transition">Modifier</a>
            <div class="w-1/3">
                {{ include('client/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
