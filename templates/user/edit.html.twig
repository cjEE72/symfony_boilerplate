{# templates/user/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Modifier l'utilisateur{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto py-12 px-4">
    <div class="mb-8">
        <a href="{{ path('app_user_index') }}" class="text-indigo-600 hover:underline flex items-center gap-2">
            ← Retour à la liste 
        </a>
    </div>

    <div class="bg-white shadow-xl rounded-3xl overflow-hidden border border-gray-100">
        <div class="bg-indigo-600 px-8 py-6">
            <h1 class="text-2xl font-bold text-white uppercase">Modifier le profil</h1>
        </div>

        <div class="p-8">
            {{ include('user/_form.html.twig', {'button_label': 'Mettre à jour'}) }} 

            <div class="mt-12 pt-8 border-t border-red-100">
                <p class="text-sm font-bold text-red-600 mb-4">Suppression</p>
                {{ include('user/_delete_form.html.twig') }} 
            </div>
        </div>
    </div>
</div>
{% endblock %}