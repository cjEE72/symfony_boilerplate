{# templates/user/_form.html.twig #}
{{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
            {{ form_label(form.firstname, 'Prénom', {'label_attr': {'class': 'block text-sm font-bold text-gray-700 mb-1'}}) }}
            {{ form_widget(form.firstname, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-500'}}) }}
        </div>
        <div>
            {{ form_label(form.lastname, 'Nom', {'label_attr': {'class': 'block text-sm font-bold text-gray-700 mb-1'}}) }}
            {{ form_widget(form.lastname, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-500'}}) }}
        </div>
    </div>

    <div>
        {{ form_label(form.email, 'Email', {'label_attr': {'class': 'block text-sm font-bold text-gray-700 mb-1'}}) }}
        {{ form_widget(form.email, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:ring-2 focus:ring-indigo-500'}}) }}
    </div>
    
    {% if form.password is defined %}
        <div>
            {{ form_label(form.password) }}
            {{ form_widget(form.password, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg'}}) }}
        </div>
    {% endif %}
    
    {# RÔLES #}
    <div>
        {{ form_label(form.roles, 'Niveau d\'accès (Rôle)', {'label_attr': {'class': 'block text-sm font-bold text-gray-700 mb-1'}}) }}
        {{ form_widget(form.roles, {
            'attr': {
                'class': 'block w-full px-4 py-2 bg-white border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 outline-none cursor-pointer'
            }
        }) }}
        
    </div>

    <div class="pt-6">
        <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 rounded-xl shadow-md transition">
            {{ button_label|default('Mettre à jour le profil') }}
        </button>
    </div>

{{ form_end(form) }}