{# templates/user/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Profil Utilisateur{% endblock %}

{% block body %}
<div class="max-w-3xl mx-auto py-10 px-4">
    <div class="mb-6 flex justify-between items-center">
        <a href="{{ path('app_user_index') }}" class="text-sm text-gray-500 hover:text-indigo-600 flex items-center gap-2">
             ← Retour à la liste
        </a>
    </div>

    <div class="bg-white shadow-lg rounded-2xl p-8 border border-gray-100">
        <div class="flex items-center gap-6 mb-8 pb-8 border-b border-gray-100">
            <div class="h-20 w-20 bg-indigo-600 text-white rounded-2xl flex items-center justify-center text-3xl font-black shadow-lg shadow-indigo-100">
                {{ user.firstname|first|upper }}{{ user.lastname|first|upper }}
            </div>
            <div>
                <h1 class="text-4xl font-bold text-gray-900">{{ user.firstname }} {{ user.lastname }}</h1>
                <p class="text-lg text-gray-500">{{ user.email }}</p>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-10">
            <div>
                <span class="block text-xs font-bold text-gray-400 uppercase tracking-widest mb-1">Rôles attribués</span>
                <div>
    <span class="block text-xs font-bold text-gray-400 uppercase tracking-widest mb-1">Rôle Principal</span>
    {% if 'ROLE_ADMIN' in user.roles %}
        <span class="px-3 py-1 bg-red-50 text-red-700 rounded-lg text-xs font-bold border border-red-100">
            ADMINISTRATEUR
        </span>
    {% elseif 'ROLE_MANAGER' in user.roles %}
        <span class="px-3 py-1 bg-blue-50 text-blue-700 rounded-lg text-xs font-bold border border-blue-100">
            MANAGER
        </span>
    {% else %}
        <span class="px-3 py-1 bg-green-50 text-green-700 rounded-lg text-xs font-bold border border-green-100">
            UTILISATEUR
        </span>
    {% endif %}
</div>
            </div>
            <div>
                <span class="block text-xs font-bold text-gray-400 uppercase tracking-widest mb-1">Identifiant technique</span>
                <span class="text-gray-900 font-mono bg-gray-50 px-2 py-1 rounded">#{{ user.id }}</span>
            </div>
        </div>

        <div class="flex flex-col sm:flex-row items-center gap-4">
            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="w-full sm:flex-1 text-center bg-amber-500 hover:bg-amber-600 text-white font-bold py-4 rounded-xl transition shadow-lg shadow-amber-100">
                Modifier le profil
            </a>
            <div class="w-full sm:w-1/3">
                {{ include('user/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}