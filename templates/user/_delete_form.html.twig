{# templates/user/_delete_form.html.twig #}
<form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');"> 
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}"> 
    <button class="w-full bg-red-50 text-red-600 border border-red-200 hover:bg-red-600 hover:text-white font-bold py-2 px-4 rounded-xl transition duration-200 text-sm">
        Supprimer le compte 
    </button>
</form>